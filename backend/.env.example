# Backend (FastAPI) production example
APP_ENV=production

# Strong random secrets (>=32 chars)
SECRET_KEY=CHANGE_ME_TO_A_LONG_RANDOM_SECRET
REFRESH_SECRET_KEY=CHANGE_ME_TO_A_LONG_RANDOM_SECRET

# Database
# SQLite (dev): sqlite:///path/to/election_manager.db
# Postgres (prod): postgresql+psycopg2://user:pass@host:5432/dbname
DATABASE_URL=

# CORS
# Comma-separated origins, e.g. https://panel.example.com,https://admin.example.com
CORS_ALLOW_ORIGINS=

# If behind reverse proxy and you want to trust X-Forwarded-For for rate limiting
TRUST_PROXY=0

# Upload limits
UPLOAD_MAX_BYTES=10485760
